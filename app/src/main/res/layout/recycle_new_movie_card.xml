<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:clipToPadding="false"
>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
    >
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
        >
            <TextView
                    android:id="@+id/new_movie_card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Captain America"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    style="@style/TxtDefaultHeading"
                    android:textSize="22dp"
            />
            <TextView
                    android:id="@+id/new_movie_card_length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2h 14min"
                    style="@style/TxtDefaultText"
                    android:layout_marginTop="30dp"
                    android:textSize="14dp"
                    app:layout_constraintTop_toBottomOf="@id/new_movie_card_title"
                    app:layout_constraintLeft_toLeftOf="parent"
            />
            <TextView
                    android:id="@+id/new_movie_card_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TxtDefaultText"
                    android:text="Action Adventure"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="14dp"
                    app:layout_constraintTop_toBottomOf="@id/new_movie_card_title"
                    app:layout_constraintLeft_toRightOf="@id/new_movie_card_length"
            />
            <TextView
                    android:id="@+id/new_movie_card_available"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IMAX 4D 3D"
                    android:layout_marginTop="10dp"
                    android:textSize="12dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/new_movie_card_length"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.appcompat.widget.LinearLayoutCompat>

